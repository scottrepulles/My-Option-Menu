<!-- res/drawable/button_style.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#6200EE"/> <!-- You can change this color to your preference -->

    <!-- Rounded corners -->
    <corners android:radius="12dp"/> <!-- Adjust the radius for more or less roundness -->

    <!-- Padding inside the button -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp"/>
</shape>
