<resources>
    <!-- Base application theme with Material Components DayNight DarkActionBar style. -->
    <style name="Theme.MyMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary color scheme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color scheme -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color based on the primary variant -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Additional customization can be added here -->
    </style>
</resources>
