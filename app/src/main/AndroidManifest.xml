<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mymenu">

    <!-- Optional permissions (if needed) -->
    <!-- Example permission for internet access, uncomment if required -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->

    <!-- Optional permission for external storage, uncomment if required -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMenu"
        tools:targetApi="31">

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <!-- Intent filter for launching the app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AppBarActivity -->
        <activity android:name=".AppBarActivity"
            android:exported="true" />

        <!-- ContextMenuActivity -->
        <activity android:name=".ContextMenuActivity"
            android:exported="true" />

        <!-- PopupMenuActivity -->
        <activity android:name=".PopupMenuActivity"
            android:exported="true" />

        <!-- DialogsActivity -->
        <activity android:name=".DialogActivity"
            android:exported="true" />

        <!-- PickersActivity -->
        <activity android:name=".PickersActivity"
            android:exported="true" />

    </application>

</manifest>
